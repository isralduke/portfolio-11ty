<aside aria-labelledby="talks" class="content talks-grid">
	<h2 id="talks">Talks</h2>
	{% for item in talks %}
	<div class="grid-item">
		<div>
			<h3 id="{{ item.title | slugify }}">{{ item.title }}</h3>
			<p>{{ item.description }}</p>
		</div>
		<div class="embed-container">
			<iframe src='https://www.youtube.com/embed/{{ item.embed }}' frameborder='0' title="{{ item.data.title }}" allowfullscreen></iframe>
		</div>
	</div>
	{% endfor %}
</aside>

<header class="hero hero-project position-relative pt-8 pb-5" style="background-image: url('/images/projects/{{ title | slugify }}/feature.png');">
	<div class="position-absolute top-0 end-0 bottom-0 start-0 bg-gray-neutral mix-blend-mode-saturation"></div>
	<div class="position-absolute top-0 end-0 bottom-0 start-0 bg-azure-dark mix-blend-mode-multiply"></div>
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6">
				<div class="card bg-transparent p-0">
					<div class="card-body p-0">
						<h1 class="h1 text-uppercase text-white" id="pageName">{{ title }}</h1>
						<p class="mb-0 text-white">{{ excerpt }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<aside aria-labelledby="certifications" class="content grid">
	<h2 id="certifications">Certifications</h2>
	{% for item in certifications %}
	<div class="grid-item">
		<h3 id="{{ item.title | slugify }}" >{{ item.title }}</h3>
		<p><a href="{{ item.link }}">{{ item.description }}</a>.</p>
	</div>
	{% endfor %}
</aside>

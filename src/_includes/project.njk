---
layout: base.njk
bodyclass: project-detail
---

<main class="project-detail" id="main">
  <div class="project-hero d-flex flex-column" style="background-image: url('{{ projectImgSrc1 }}');">
      <img src="{{ projectImgSrc1 }}" width="100%" alt="{{ projectImageAlt1 }}" class="img-fluid img-feature">
    <div class="container-fluid mt-auto mx-0 mb-4 mb-lg-auto">
      <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card rounded-0">
            <div class="card-body">
              <p class="h6 text-uppercase mb-0" aria-hidden="true">Projects</p>
              <h2 class="h1 mb-0">{{ projectName }} <span class="visually-hidden">Details</span></h2>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <article class="project-content">
    <div class="container">
      <div class="row">
        <div class="col-10 offset-1 col-lg-4 order-0 order-lg-1">
          <div class="row">
            <div class="col-6 col-lg-12 mb-lg-4">
              <img src="{{ projectImgSrc2 }}" alt="{{ projectImageAlt2 }}" class="img-fluid rounded">
            </div>
            <div class="col-6 col-lg-12">
              <img src="{{ projectImgSrc3 }}" alt="{{ projectImageAlt3 }}" class="img-fluid rounded">
            </div>
          </div>
        </div>
        <div class="col-10 offset-1 col-lg-5 order-1 order-lg-0">
          <p class="lead mt-4 mb-0 text-black fs-4">{{ projectLeadSentence }}</p>
          <a href="{{ projectPrototypeLink }}" class="btn btn-dark btn-lg my-5" target="_blank">
            Try {{ projectName }} yourself 
            <span class="fas fa-angle-double-right" aria-hidden="true"></span>
          </a>
          <div class="content">
            {{ content | safe }}
          </div>
        </div>
      </div>
    </div>
  </article>   
</main>
{% include 'try-it-block.njk' %}
{% include 'skills-block.njk' %}
{% include 'certifications-block.njk' %}

---
layout: base
---

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="h1" id="pageName">{{ title }}</h1>
      <p class="lead">{{ excerpt }}</p>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    {# feature image, should only be 1 item #}
    <div class="col-12">
      <img src="/images/projects/{{ title | slugify }}/feature.png" alt="{{ featureAlt }}" class="img-fluid">
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    {# mockups #}
    {% for item in mockups %}
    <div class="col-6 {% if mockups.length == 3 %} col-md-4 {% endif %} {% if mockups.length == 4 %} col-md-3 {% endif %}">
      <img src="/images/projects/{{ title | slugify }}/{{ item }}" alt="Mockup {{ loop.index }} of {{ mockups.length }} for {{ title }}." class="img-fluid">
    </div>
    {% endfor %}
  </div>
  {# only for interactive projects #}
  {% if tags == 'productDesign' %}
  <div class="row">
    <div class="col-md-6">
      {# try it link #}
      <a href="{{ tryitLink }}" class="btn btn-primary">Try It Yourself</a>
    </div>
    <div class="col-md-6">
      {# try it link #}
      <a href="{{ designFile }}" class="btn btn-outline-primary">Review Design File</a>
    </div>
  </div>
  {# Project Info #}
  <div class="row">
    <div class="col-12">
      <h2>Project Details</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-3">
      <h3>Project Roles</h3>
      <ul class="list-group">
        {% for role in roles %}
        <li class="list-group-item">{{ role }}</li>
        {% endfor %}
      </ul>
    </div>
    <div class="col-12 col-md-6 col-lg-3">
      <h3>Project Data</h3>
      <ul class="list-group">
        <li class="list-group-item d-flex">
          <span class="w-50">Platform:</span><span class="w-50">{{ platform }}</span></li>
        <li class="list-group-item d-flex">
          <span class="w-50">Type:</span><span class="w-50">{{ type }}</span></li>
        <li class="list-group-item d-flex">
          <span class="w-50">Status:</span><span class="w-50">{{ status}}</span></li>
      </ul>
    </div>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-12">
      {{ content | safe }}
    </div>
  </div>
</div>

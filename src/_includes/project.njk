---
layout: base
---

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="h1" id="pageName">{{ title }}</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="lead">{{ excerpt }}</p>
    </div>
  </div>
  <div class="row">
    {# feature image, should only be 1 item #}
    <div class="col-12">
      <img src="/images/projects/{{ title | slugify }}/feature.jpg" alt="{{ featureAlt }}" class="img-fluid">
    </div>
  </div>
  <div class="row">
    {# mockups #}
    {% for item in mockups %}
    <div class="col-6 {% if mockups.length == 3 %} col-md-4 {% endif %} {% if mockups.length == 4 %} col-md-3 {% endif %}">
      <img src="/images/projects/{{ title | slugify }}/{{ item }}" alt="Mockup {{ loop.index }} of {{ mockups.length }} for {{ title }}." class="img-fluid">
    </div>
    {% endfor %}
  </div>
  {# only for interactive projects #}
  {% if tags == 'productDesign' %}
  <div class="row">
    <div class="col-md-6">
      {# try it link #}
      <a href="{{ tryitLink }}" class="btn btn-primary">Try It Yourself</a>
    </div>
    <div class="col-md-6">
      {# try it link #}
      <a href="{{ designFile }}" class="btn btn-outline-primary">Review Design File</a>
    </div>
  </div>
  {# Projct Info #}
  <div class="row">
    <div class="col-12">
      <h2>Project Info</h2>
      <ul>
        <li>Platform: {{ platform }}</li>
        <li>Type: {{ type }}</li>
        <li>Status: {{ status}}</li>
      </ul>
    </div>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-12">
      {{ content | safe }}
    </div>
  </div>
</div>

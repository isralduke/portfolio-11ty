---
layout: base.njk
bodyclass: project-detail
---

<main class="project-detail" id="main" aria-labelledby="projectName">
  <div class="project-hero d-flex flex-column" style="background-image: url('{{ projectImgSrc1 }}');">
    <a data-fslightbox href="{{ projectImgSrc1 }}">
      <img src="{{ projectImgSrc1 }}" alt="{{ projectImageAlt1 }}" class="img-fluid img-feature">
    </a>
    <div class="container-fluid mt-auto mx-0 mb-4 mb-lg-auto">
      <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card rounded-0">
            <div class="card-body">
              <p class="h6 text-uppercase mb-0" aria-hidden="true">Projects</p>
              <h2 class="h1 mb-0" id="projectName">{{ projectName }} <span class="visually-hidden">Details</span></h2>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <div class="project-content">
    <div class="container">
      <div class="row g-5">
        <div class="col-lg-4 order-0 order-lg-1">
          <div class="row">
            <div class="col-6 col-lg-12 mb-lg-4">
              <a data-fslightbox href="{{ projectImgSrc2 }}">
                <img src="{{ projectImgSrc2 }}" alt="{{ projectImageAlt2 }}" class="img-fluid rounded img-shadow">
              </a>
            </div>
            <div class="col-6 col-lg-12">
              <a data-fslightbox href="{{ projectImgSrc3 }}">
                <img src="{{ projectImgSrc3 }}" alt="{{ projectImageAlt3 }}" class="img-fluid rounded img-shadow">
              </a>
            </div>
          </div>
        </div>
        <div class="col-lg-8 order-1 order-lg-0">
          <p class="lead mt-4 mb-0 fs-4">{{ projectLeadSentence }}</p>
          <a href="{{ projectPrototypeLink }}" class="btn btn-dark btn-lg my-5" target="_blank">
            Try it yourself 
            <span class="fas fa-angle-double-right" aria-hidden="true"></span>
          </a>
          <div class="content">
            <div class="mb-5">
              <h3>Project Info</h3>
              <div class="row g-2">
                <div class="col-12 col-md">
                  <div class="card">
                    <div class="card-body d-flex p-2">
                      <span>Platform</span>
                      <span>{{ projectPlatform }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md">
                  <div class="card">
                    <div class="card-body d-flex p-2">
                      <span>Type</span>
                      <span>{{ projectType }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md">
                  <div class="card">
                    <div class="card-body d-flex p-2">
                      <span>Status</span>
                      <span>{{ projectStatus }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{ content | safe }}
          </div>
        </div>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-12">
            <h3 class="h3">Review It</h3>
            <a href="{{ projectDesignFile }}" class="btn btn-dark">
              Review it in Figma
              <span class="fas fa-angle-double-right" aria-hidden="true"></span>
            </a>
          </div>
          <div class="col-12">
            <a href="{{ projectDesignFile }}" class="project-prototype">
              <img src="{{ projectImgSrc4 }}" alt="{{ projectImageAlt4 }}" class="img-fluid">
              <span class="visually-hidden">Go to the Figma file</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>   
</main>

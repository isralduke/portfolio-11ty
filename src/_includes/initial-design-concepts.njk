<div class="py-8">
    <div class="container">
        <div class="row">
            <div class="col-10 offset-1 col-lg-4">
                <h2 class="h2">Initial Design Concepts</h2>
                <p class="">{{ sketchText }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-10 offset-1">
                <div class="row">
                {% for item in sketches %}
                <div class="col-12 {% if sketches.length > 1 %} col-lg-4 {% endif %}">
                    <img src="/images/projects/{{ title | slugify }}/{{ item }}" alt="Hand sketches for {{ title }}." class="img-fluid rounded shadow-sm">
                </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
{% for item in usabilities %}
  <div class="col-12 {% if usabilities.length > 1%} col-md-6 {% endif %}">
    <a data-fslightbox href="/images/projects/{{ title | slugify }}/{{ item }}">
      <img src="/images/projects/{{ title | slugify }}/{{ item }}" alt="Usability study {{ loop.index }} for {{ title }}." class="img-fluid">
    </a>
  </div>
{% endfor %}
</div>

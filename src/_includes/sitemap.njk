---
layout: base
---
<main class="about" id="main" aria-labelledby="sitemap">
    <div class="sitemap-hero">
        <div class="container-fluid">
          <div class="row align-items-center">
            <div class="col-10 offset-1 col-lg-3">
              <div class="card">
                <div class="card-body">
                  <h2 class="h2 text-uppercase mb-0" id="sitemap">
                    <img src="/images/svg/icon-isral-white.svg" alt="" aria-hidden="true">
                    Sitemap
                  </h2>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                <h2 class="h2" id="sitemap">Sitemap</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10">
                <h3 class="h3">Informational Pages</h3>
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/about">About</a>
                    </li>
                </ul>
                <h3 class="h3">Project Pages</h3>
                <ul>
                    {% for project in collections.projects %}
                    <li>
                        <a href="{{ project.url }}">{{ project.data.projectName }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</main>
<aside aria-labelledby="skills" class="bg-blue-stripes pt-7 pb-9 text-white">
	<div class="container">
		<div class="row mb-7">
			<div class="col-12">
				<h2 class="h2 text-center" id="skills">Skill Sets</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			{% for item in collections.skills %}
			<div class="col-10 col-md-4">
				<div class="p-4">
					<h3 id="{{ item.data.title | slugify }}" class="h3 d-flex align-items-center">{{ item.data.title }}</h3>
					<p class="">{{ item.data.description }}</p>
					<ul aria-labelledby="{{ item.data.title | slugify }}" class="list-group">
						{% for skillItem in item.data.skillItems %}
						<li class="list-group-item bg-transparent text-white">{{ skillItem }}</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</aside>

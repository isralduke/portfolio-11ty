---
layout: base.njk
---

<div class="banner">
	<div class="card">
		<h1>{{ title }}</h1>
		<p>{{ excerpt }}</p>
	</div>
	<img src="/images/projects/{{ title | slugify }}/feature.png" alt="">
</div>
<div class="thumbnails">
	<div class="card">
		{% for item in mockups %}
			<a class="thumbnail">
				<img src="/images/projects/{{ title | slugify }}/mockup-{{ loop.index }}.png" alt="{{ item }}">
			</a class="thumbnail">
		{% endfor %}
	</div>
</div>
<div class="content grid">
	{% for section in sections %}
	
	{% endfor %}
</div>

{% set buttonText = 'Review More Projects' %}
{% set buttonLink = '/product-design' %}
{% include 'button-chunky.njk' %}

---
layout    : base
heroClass : hero-project
---

<h1 class="" id="pageName">{{ title }}</h1>
<p class="">{{ excerpt }}</p>


<a href="/images/projects/{{ title | slugify }}/feature.png" class="">
	<img src="/images/projects/{{ title | slugify }}/feature.png" alt="{{ featureAlt }}" class="">
</a>


{% for item in mockups %}
<a data-fslightbox href="/images/projects/{{ title | slugify }}/mockup-{{ loop.index }}.png" class="">
	<img src="/images/projects/{{ title | slugify }}/mockup-{{ loop.index }}.png" alt="{{ item }}" class="">
</a>
{% endfor %}


<h2 class="">Project Stats</h2>
<ul class="">
	{% for item in stats %}
	<li class="">
		<span class="">{{ item.label }}</span>
		<span class="">{{ item.value }}</span>
	</li>
	{% endfor %}
</ul>


<h2 class="">Project Roles</h2>
<ul class="">
	{% for item in roles %}
	<li class="">{{ item }}</li>
	{% endfor %}
</ul>


<h2>Inspect It Yourself</h2>
{% if tryitLink %}					
<a href="{{ tryitLink }}" class="">Try {{ title }}</a>
{% endif %}

{% if designFile %}
<a href="{{ designFile }}" class="">
	Design File for {{ title }}
</a>
{% endif %}

		
{{ content | safe }}

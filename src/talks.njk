---


  <div class="container">
    {% for item in collections.talks %}
    <div class="row">
      <div class="col-12 col-md-6">
        <h2 class="h2">{{ item.data.title }}</h2>
        <p>{{ item.data.excerpt }}</p>
        <a href="{{ item.data.deck }}" download>Get {{ item.data.title }} deck</a>
      </div>
      <div class="col-12 col-md-6">
        <div class="embed-container">
          <iframe src='https://www.youtube.com/embed/{{ item.data.embed }}' frameborder='0' allowfullscreen></iframe>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
